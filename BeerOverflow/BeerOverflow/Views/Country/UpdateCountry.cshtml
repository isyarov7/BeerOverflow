@model BeerOverflow.Models.NewCountryViewModel

@{
    ViewData["Title"] = "UpdateCountry";
}

<h1>Update Country</h1>

<h4>Update Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCountry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldName" class="control-label"></label>
                <input asp-for="OldName" class="form-control" />
                <label asp-for="NewName" class="control-label"></label>
                <input asp-for="NewName" class="form-control" />
                <span asp-validation-for="NewName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
