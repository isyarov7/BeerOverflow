@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to beerShop</h1>
</div>
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-50" src="~/images/corona-1.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-50" src="~/images/carousel2.png" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-50" src="~/images/carousel3.jpg" />
        </div>
    </div>
</div>
<div class="text-lg-center">
    <h1 class="shadow-lg">Learn about our Top Rated Beers!</h1>
</div>
<div class="container">
    <div class="row">
        @if (Model.TopRatedBeers.Count == 0)
        {
<p class="alert alert-info">No beers found. Try again later!</p> }
            else
            {
@foreach (var beer in Model.TopRatedBeers)
{
<partial name="_SigleBeerPartial" model="beer" />}}

    </div>
</div>