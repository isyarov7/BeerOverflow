@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="align-content-lg-start">
        <div class="carousel-item active">
            <img class="d-block w-25" src="./images/carousel1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-25" src="./images/carousel2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-25" src="./images/carousel3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome to beerShop</h1>
</div>
